<p id="notice"><%= notice %></p>

<h1>Diaries</h1>
<%= form_tag("/diaries", method: "get") do %>
  <%= label_tag(:weather_key, "Search weather:") %>
  <%= text_field_tag(:weather_key) %>
  <%= submit_tag("Search") %> <%= link_to "Clear", diaries_path %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @diaries.each do |diary| %>
      <tr>
        <td><%= diary.content %></td>
        <td><%= diary.temperature %></td>
        <td><%= link_to 'Show', diary %></td>
        <td><%= link_to 'Edit', edit_diary_path(diary) %></td>
        <td><%= link_to 'Destroy', diary, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Diary', new_diary_path %>
